{
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "downlevelIteration": true,
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "es2015.collection", "es2015.iterable"]
  }
}
